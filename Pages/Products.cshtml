@page
@model woodgrovedemo.Pages.ProductsModel
@{
}

<h1 style="color: green; padding-bottom: 15px; padding-top: 15px;">Products</h1>

@if (User.Identity?.IsAuthenticated == true)
{
    @if (!Model.UserHasAccess)
    {
        <div class="alert alert-danger" role="alert" style="padding-bottom: 25px; padding-top: 25px;">
            To manage the products, you should have the 'Products.Contributor' application role. 
        </div>
    }
    else
    {
    <div class="row" style="padding-bottom: 5px;">
        <div class="col-sm-4">
        <table class="table table-hover">
        <thead>
            <tr>
            <th scope="col">Product name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><i class="bi bi-save"></i> <i class="bi bi-trash"></i> &nbsp; Breads</td>
            </tr>
            <tr>
                <td><i class="bi bi-save"></i> <i class="bi bi-trash"></i> &nbsp; Corns</td>
            </tr>
            <tr>
                <td><i class="bi bi-save"></i> <i class="bi bi-trash"></i> &nbsp; Eggs</td>
            </tr>
            <tr>
                <td><i class="bi bi-save"></i> <i class="bi bi-trash"></i> &nbsp; Grapes</td>
            </tr>
            <tr>
                <td><i class="bi bi-save"></i> <i class="bi bi-trash"></i> &nbsp; Tomatoes</td>
            </tr>
            <tr>
                <td><i class="bi bi-save"></i> <i class="bi bi-trash"></i> &nbsp; Watermelons</td>
            </tr>
        </tbody>
        </table>
        </div>
    </div>
    }
}
else
{
    <div class="alert alert-secondary" role="alert" style="padding-bottom: 25px; padding-top: 25px;">
        <i class="bi bi-info-circle"></i>&nbsp; To manage orders, please login!
    </div>
}